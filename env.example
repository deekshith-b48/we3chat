# We3Chat Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=We3Chat
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized encrypted messaging platform

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/we3chat
MONGODB_DB_NAME=we3chat

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Network Configuration
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
BLOCKCHAIN_WS_URL=wss://rpc-amoy.polygon.technology
CHAT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
CHAIN_ID=80002
CHAIN_NAME=Polygon Amoy

# Wallet Configuration
WALLET_CONNECT_PROJECT_ID=your-walletconnect-project-id

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# Web3.Storage Configuration
WEB3STORAGE_TOKEN=your-web3-storage-token
NEXT_PUBLIC_WEB3STORAGE_TOKEN=your-web3-storage-token

# IPFS Gateway Configuration
IPFS_GATEWAY_PRIMARY=https://dweb.link
IPFS_GATEWAY_FALLBACK=https://ipfs.io,https://gateway.pinata.cloud,https://cloudflare-ipfs.com

# =============================================================================
# REDIS CONFIGURATION (for job queues)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SIWE Configuration
SIWE_DOMAIN=localhost
SIWE_ORIGIN=http://localhost:3000
SIWE_STATEMENT=Sign in with Ethereum to We3Chat

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-GCM
KEY_ROTATION_INTERVAL_DAYS=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Sync Service Configuration
SYNC_INTERVAL_MINUTES=5
INDEX_INTERVAL_MINUTES=10
MAX_MESSAGES_PER_SYNC=1000

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_BLOCKCHAIN_MESSAGING=true
ENABLE_IPFS_STORAGE=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_MESSAGE_SEARCH=true
ENABLE_KEY_ROTATION=true
ENABLE_SIWE_AUTH=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_MOCK_DATA=false
ENABLE_DEV_TOOLS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Push Notifications (Optional)
FCM_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# External API Keys
ALCHEMY_API_KEY=
INFURA_PROJECT_ID=
PINATA_API_KEY=
PINATA_SECRET_KEY=

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Kubernetes Configuration
K8S_NAMESPACE=we3chat
K8S_REPLICAS=3

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/we3chat-test

# Test Blockchain
TEST_BLOCKCHAIN_RPC_URL=http://localhost:8545
TEST_CHAT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

